<?xml version="1.0" encoding="utf-8"?>
<views:SampleView xmlns:fx="http://ns.adobe.com/mxml/2009"
                  xmlns:s="library://ns.adobe.com/flex/spark"
                  title="ComboBoxView" xmlns:views="com.pialabs.eskimo.views.*" xmlns:pia="http://piaction.com">
  <fx:Script>
    <![CDATA[
      import com.pialabs.eskimo.model.Model;
    ]]>
  </fx:Script>

  <s:SkinnableContainer width="100%" styleName="componentContainerStyle">
    <s:layout>
      <s:VerticalLayout horizontalAlign="center"/>
    </s:layout>
    <pia:ComboBox id="comboBox" width="100%" maxWidth="300"
                  dataProvider="{Model.createPersonList()}"/>
  </s:SkinnableContainer>
</views:SampleView>
