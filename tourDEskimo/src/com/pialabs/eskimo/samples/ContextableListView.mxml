<?xml version="1.0" encoding="utf-8"?>
<views:SampleView xmlns:fx="http://ns.adobe.com/mxml/2009"
                  xmlns:s="library://ns.adobe.com/flex/spark"
                  title="ContextableListView"
                  xmlns:views="com.pialabs.eskimo.views.*"
                  xmlns:components="com.pialabs.eskimo.components.*">
  <fx:Script>
    <![CDATA[
      import com.pialabs.eskimo.events.ContextableListEvent;
      import com.pialabs.eskimo.model.Model;
      
      import mx.collections.ArrayCollection;
      
      [Bindable]
      private var _dataProvider:ArrayCollection = Model.createPersonList();
      
      protected function list_contextMenuItemClickHandler(event:ContextableListEvent):void
      {
        if (event.menuItem.label == "Delete")
        {
          list.dataProvider.removeItemAt(event.itemIndex)
        }
      }
    ]]>
  </fx:Script>
  <fx:Declarations>
    <!-- Placer ici les éléments non visuels (services et objets de valeur, par exemple). -->
  </fx:Declarations>
  <s:Label fontSize="14" width="100%" text="Context menu is displayed when you perform a 'long press' (press and hold) on an item." />
  <s:SkinnableContainer width="100%" styleName="componentContainerStyle">
    <components:ContextableList id="list" width="100%" height="100%"
                                contextMenuItemClick="list_contextMenuItemClickHandler(event)"
                                dataProvider="{_dataProvider}">
      <components:contextMenuItems>
        <fx:Object label="Delete"/>
        <fx:Object label="Cancel"/>
      </components:contextMenuItems>
    </components:ContextableList>
  </s:SkinnableContainer>
</views:SampleView>
