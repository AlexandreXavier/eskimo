<?xml version="1.0" encoding="utf-8"?>
<views:SampleView xmlns:fx="http://ns.adobe.com/mxml/2009"
                  xmlns:s="library://ns.adobe.com/flex/spark"
                  xmlns:views="com.pialabs.eskimo.views.*"
                  xmlns:components="com.pialabs.eskimo.components.*"
                  title="SectionListView">

  <fx:Script>
    <![CDATA[
      import com.pialabs.eskimo.model.Model;
      
      import mx.collections.ArrayCollection;
      
      [Bindable]
      private var _dataProvider:ArrayCollection = Model.createGroupPersonList();
      
    ]]>
  </fx:Script>
  <s:SkinnableContainer width="100%" height="100%" styleName="componentContainerStyle">
    <s:VGroup width="100%" height="100%" horizontalAlign="center">
      <components:SectionList id="sectionList" dataProvider="{_dataProvider}" width="100%" height="100%"/>
    </s:VGroup>
  </s:SkinnableContainer>

</views:SampleView>
