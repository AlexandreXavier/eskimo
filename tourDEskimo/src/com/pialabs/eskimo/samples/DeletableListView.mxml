<?xml version="1.0" encoding="utf-8"?>
<views:SampleView xmlns:fx="http://ns.adobe.com/mxml/2009"
                  xmlns:s="library://ns.adobe.com/flex/spark"
                  title="DeletableListView"
                  xmlns:components="com.piaction.components.*"
                  xmlns:views="com.pialabs.eskimo.views.*">
  <fx:Declarations>
    <!-- Placer ici les éléments non visuels (services et objets de valeur, par exemple). -->
  </fx:Declarations>

  <s:CheckBox id="checkbox"
              change="deletableList.editionMode = checkbox.selected"
              label="Edition mode"/>

  <components:DeletableList id="deletableList" width="100%" height="100%"
                            alternatingItemColors="[0xEDEDED, 0xFFFFFF]">
    <components:dataProvider>
      <s:ArrayCollection>
        <fx:Object label="Item 1"/>
        <fx:Object label="Item 2"/>
        <fx:Object label="Item 3"/>
        <fx:Object label="Item 4"/>
        <fx:Object label="Item 5"/>
        <fx:Object label="Item 6"/>
      </s:ArrayCollection>
    </components:dataProvider>
  </components:DeletableList>
</views:SampleView>
