<?xml version="1.0" encoding="utf-8"?>
<views:SampleView xmlns:fx="http://ns.adobe.com/mxml/2009"
                  xmlns:s="library://ns.adobe.com/flex/spark"
                  title="DeletableListView"
                  xmlns:views="com.pialabs.eskimo.views.*"
                  xmlns:components="com.pialabs.eskimo.components.*">
  <fx:Script>
    <![CDATA[
      import com.pialabs.eskimo.model.Model;
      
      import mx.collections.ArrayCollection;
      
      [Bindable]
      private var _dataProvider:ArrayCollection = Model.createPersonList();
    ]]>
  </fx:Script>

  <fx:Declarations>
    <!-- Placer ici les éléments non visuels (services et objets de valeur, par exemple). -->
  </fx:Declarations>

  <s:SkinnableContainer width="100%" styleName="componentContainerStyle">
    <s:layout>
      <s:VerticalLayout horizontalAlign="center"/>
    </s:layout>
    <s:CheckBox id="checkbox"
                change="deletableList.editionMode = checkbox.selected"
                label="Edition mode"/>

    <components:DeletableList id="deletableList" width="100%" height="100%"
                              alternatingItemColors="[0xEDEDED, 0xFFFFFF]"
                              dataProvider="{_dataProvider}" itemDeleted="trace(event)">
    </components:DeletableList>
  </s:SkinnableContainer>
</views:SampleView>
