<?xml version="1.0" encoding="utf-8"?>
<views:SampleView xmlns:fx="http://ns.adobe.com/mxml/2009"
                  xmlns:s="library://ns.adobe.com/flex/spark"
                  title="NumericStepperView"
                  xmlns:views="com.pialabs.eskimo.views.*"
                  xmlns:components="com.pialabs.eskimo.components.*">
  <fx:Declarations>
    <!-- Placer ici les éléments non visuels (services et objets de valeur, par exemple). -->
  </fx:Declarations>
  <s:SkinnableContainer width="100%" styleName="componentContainerStyle">
    <s:layout>
      <s:HorizontalLayout horizontalAlign="center" gap="1"/>
    </s:layout>


    <s:NumericStepper maximum="31" minimum="1" value="17" width="80"
                      allowValueWrap="true"/>
    <s:NumericStepper maximum="12" minimum="1" value="6" width="80"
                      allowValueWrap="true"/>
    <s:NumericStepper maximum="2040" minimum="1900" value="2011" width="80"
                      allowValueWrap="true"/>


  </s:SkinnableContainer>
</views:SampleView>
