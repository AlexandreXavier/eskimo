<?xml version="1.0" encoding="utf-8"?>
<views:SampleView xmlns:fx="http://ns.adobe.com/mxml/2009"
                  xmlns:s="library://ns.adobe.com/flex/spark"
                  title="MultiPlateformeGroupView"
                  xmlns:components="com.piaction.components.*"
                  xmlns:views="com.pialabs.eskimo.views.*">
    <fx:Declarations>
        <!-- Placer ici les éléments non visuels (services et objets de valeur, par exemple). -->
    </fx:Declarations>


    <views:layout>
        <s:VerticalLayout paddingTop="20" paddingRight="20" paddingBottom="20"
                          paddingLeft="20"/>
    </views:layout>

    <components:MultiplateformeGroup type="IOS">
        <components:layout>
            <s:VerticalLayout/>
        </components:layout>
        <s:Label text="IOS CONTENT"
                 creationComplete="trace('content 1 created')"/>

    </components:MultiplateformeGroup>

    <components:MultiplateformeGroup>
        <components:layout>
            <s:VerticalLayout/>
        </components:layout>
        <s:Label text="ANDROID CONTENT"
                 creationComplete="trace('content 2 created')"/>
        <components:ListWheel/>
    </components:MultiplateformeGroup>

</views:SampleView>
