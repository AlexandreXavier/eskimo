<?xml version="1.0" encoding="utf-8"?>
<views:SampleView xmlns:fx="http://ns.adobe.com/mxml/2009"
                  xmlns:s="library://ns.adobe.com/flex/spark"
                  title="UniqueChoiceListView"
                  xmlns:views="com.pialabs.eskimo.views.*"
                  xmlns:components="com.pialabs.eskimo.components.*"
                  initialize="sampleview1_initializeHandler(event)">
  <fx:Script>
    <![CDATA[
      import com.pialabs.eskimo.model.Model;
      
      import mx.events.FlexEvent;
      
      [Bindable]
      private var selectedItem:Object;
      
      protected function sampleview1_initializeHandler(event:FlexEvent):void
      {
        // TODO Auto-generated method stub
        list.dataProvider = Model.createPersonList();
        
        selectedItem = list.dataProvider.getItemAt(0);
      }
    ]]>
  </fx:Script>
  <fx:Declarations>
    <!-- Placer ici les éléments non visuels (services et objets de valeur, par exemple). -->
  </fx:Declarations>

  <s:SkinnableContainer width="100%" styleName="componentContainerStyle">
    <s:layout>
      <s:VerticalLayout horizontalAlign="center"/>
    </s:layout>
    <components:UniqueChoiceList id="list" width="190" height="100%"
                                 change="selectedItem = list.selectedItem"/>
    <s:Label text="{'Selected item : ' + selectedItem}" color="#000000"/>
  </s:SkinnableContainer>

</views:SampleView>
