<?xml version="1.0" encoding="utf-8"?>
<views:SampleView xmlns:fx="http://ns.adobe.com/mxml/2009"
                  xmlns:s="library://ns.adobe.com/flex/spark"
                  xmlns:views="com.pialabs.eskimo.views.*"
                  xmlns:components="com.pialabs.eskimo.components.*"
                  backgroundColor="#CCCCCC" title="PageIndicatorView">
  
  <fx:Script>
    <![CDATA[
      import mx.utils.StringUtil;
      protected function applyParameters(event:Event):void
      {
        var pageCountText:String = getValueFromTextInput(pageCount);
        if(pageCountText != null)
        {
          pageIndicator.pageCount = Number(pageCountText);
        }
      }
    ]]>
  </fx:Script>
  
  <fx:Declarations>
        <!-- Place non-visual elements (e.g., services, value objects) here -->
  </fx:Declarations>
  <s:SkinnableContainer width="100%" styleName="componentContainerStyle">
    <s:HGroup>
        <s:Button label="Prev" click="pageIndicator.previous()"/>
        <components:PageIndicator id="pageIndicator" height="40" pageCount="4" selectedIndex="2"/>
        <s:Button label="Next" click="pageIndicator.next()"/>
    </s:HGroup>
  </s:SkinnableContainer>
  <s:SkinnableContainer width="100%" styleName="parameterContainerStyle">
    <s:layout>
      <s:VerticalLayout horizontalAlign="center"/>
    </s:layout>
    <s:Form width="100%">
        <!-- Page Item Size -->
      <s:FormItem label="Page item size">
        <s:HSlider id="pageItemSize" width="80%"
                       change="{pageIndicator. setStyle('pageItemSize', pageItemSize.value)}"
                       maximum="40" minimum="8" stepSize="1" value="15"/>
      </s:FormItem>
      <!-- Selected Page Item Size -->
      <s:FormItem label="Selected page item size">
        <s:HSlider id="selectedPageItemSize" width="80%"
                       change="{pageIndicator. setStyle('selectedPageItemSize', selectedPageItemSize.value)}"
                       maximum="40" minimum="8" stepSize="1" value="15"/>
      </s:FormItem> 
      <!-- Page Count -->
      <s:FormItem label="Number of pages">
            <s:HGroup>
                <s:TextInput id="pageCount" width="80%" prompt="4"/>
            </s:HGroup>
      </s:FormItem>
    </s:Form>
    <s:Button label="Apply" click="applyParameters(event)" />
  </s:SkinnableContainer>
</views:SampleView>
