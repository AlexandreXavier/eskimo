<?xml version="1.0" encoding="utf-8"?>
<views:SampleView xmlns:fx="http://ns.adobe.com/mxml/2009"
                  xmlns:s="library://ns.adobe.com/flex/spark"
                  title="MultipleChoiceListView"
                  xmlns:components="com.piaction.components.*"
                  xmlns:views="com.pialabs.eskimo.views.*">
  <fx:Declarations>
    <!-- Placer ici les éléments non visuels (services et objets de valeur, par exemple). -->
  </fx:Declarations>
  <fx:Script>
    <![CDATA[
      private function defaultSelectedItems():Vector.<Object>
      {
        var selItems:Vector.<Object> = new Vector.<Object>();
        selItems.push(checkboxData.getItemAt(1));
        selItems.push(checkboxData.getItemAt(3));
        
        return selItems;
      }
    ]]>
  </fx:Script>
  <components:MultipleChoiceList id="list" width="100%" height="100%"
                                 change="trace(list.selectedItems)"
                                 selectedItems="{defaultSelectedItems()}">
    <components:dataProvider>
      <s:ArrayCollection id="checkboxData">
        <fx:Object label="Item 1"/>
        <fx:Object label="Item 2"/>
        <fx:Object label="Item 3"/>
        <fx:Object label="Item 4"/>
        <fx:Object label="Item 5"/>
        <fx:Object label="Item 6"/>
      </s:ArrayCollection>
    </components:dataProvider>
  </components:MultipleChoiceList>
</views:SampleView>
