<?xml version="1.0" encoding="utf-8"?>
<views:SampleView xmlns:fx="http://ns.adobe.com/mxml/2009"
                  xmlns:s="library://ns.adobe.com/flex/spark"
                  xmlns:views="com.pialabs.eskimo.views.*">

  <fx:Script>
    <![CDATA[
      import com.pialabs.eskimo.components.Toast;
      
      protected function button1_clickHandler(event:MouseEvent):void
      {
        Toast.show("Toast Example");
      }
      
      protected function button2_clickHandler(event:MouseEvent):void
      {
         var toast:Toast = Toast.show("Toast Example");
        toast.setGravity(Toast.VERTICAL_CENTER | Toast.HORIZONTAL_CENTER);
      }
    ]]>
  </fx:Script>

  <fx:Declarations>
    <!-- Placer ici les éléments non visuels (services et objets de valeur, par exemple). -->
  </fx:Declarations>

  <s:SkinnableContainer width="100%" styleName="componentContainerStyle">
    <s:layout>
      <s:VerticalLayout horizontalAlign="center"/>
    </s:layout>
    <s:Button label="Show Toast" click="button1_clickHandler(event)"/>
    <s:Button label="Show centered Toast" click="button2_clickHandler(event)"/>
  </s:SkinnableContainer>
</views:SampleView>
