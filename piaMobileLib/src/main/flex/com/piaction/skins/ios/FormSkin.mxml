<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" 
        xmlns:fb="http://ns.adobe.com/flashbuilder/2009" alpha.disabled="0.5"
        cacheAsBitmap="true" creationComplete="skin1_creationCompleteHandler(event)">
  
  <fx:Metadata>
    <![CDATA[ 
    /** 
    * @copy spark.skins.spark.ApplicationSkin#hostComponent
    */
    [HostComponent("spark.components.SkinnableContainer")]
    ]]>
  </fx:Metadata> 
  
  <fx:Script>
    <![CDATA[
      import mx.core.FlexGlobals;
      import mx.events.FlexEvent;
      
      import spark.components.FormItem;
      import spark.components.TextInput;
      
      
      protected function skin1_creationCompleteHandler(event:FlexEvent):void
      {
        
      }
      
      protected function onChildAdded(event:Event):void
      {
        if(event.target is FormItem){
          event.target.setStyle("backgroundAlpha", 0);
          
        }
        if(event.target is TextInput){
          event.target.setStyle("textAlign", "right");
          event.target.setStyle("borderVisible", false);
          event.target.setStyle("contentBackgroundAlpha", 0);
          event.target.setStyle("focusAlpha", 0);
          event.target.setStyle("paddingRight", 0);
        } 
        
        
      }
      
    ]]>
  </fx:Script>
  
  <s:states>
    <s:State name="normal" />
    <s:State name="disabled" />
  </s:states>
  <!--- Defines the appearance of the SkinnableContainer class's background. -->
  <s:Rect id="background" left="0" right="0" top="0" bottom="0" radiusX="10" radiusY="10">
    <s:stroke>
      <s:SolidColorStroke color="#b4b7bb" weight="1"/>
    </s:stroke>    
    <s:fill>
      <s:SolidColor id="bgFill" color="#f7f7f7"/>
    </s:fill>
    <s:filters>
      <s:DropShadowFilter distance="1" angle="90" color="#FFFFFF" blurY="0" blurX="0" alpha="0.7"/>
    </s:filters>
  </s:Rect>
  <!--- Defines the appearance of the SkinnableContainer class's contentGroup. -->
  <s:Group id="contentGroup" showErrorSkin="true" showErrorTip="true" added="onChildAdded(event)"
           left="0" right="0" top="0" bottom="0">
    <s:layout>
      <s:FormLayout gap="3"/>
    </s:layout>
  </s:Group>
  

</s:Skin>
