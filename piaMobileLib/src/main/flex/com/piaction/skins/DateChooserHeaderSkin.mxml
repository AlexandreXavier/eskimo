<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
                      xmlns:s="library://ns.adobe.com/flex/spark" 
                      xmlns:layout="com.piaction.timesheet.tablet.presentation.common.layout.*">
  <fx:Metadata>
  <![CDATA[ 
  [HostComponent("com.piaction.components.MobileDateChooser")]
  ]]>
  </fx:Metadata>
  <fx:Script>
    <![CDATA[
      import com.piaction.events.MobileCalendarEvent;
    ]]>
  </fx:Script>
  <fx:Declarations>
    <!-- Placer ici les éléments non visuels (services et objets de valeur, par exemple). -->
  </fx:Declarations>
  <!--- background -->
  <s:Rect id="background" width="100%" height="100%">
    <s:stroke>
      <s:SolidColorStroke color="0x000000"/>
    </s:stroke>
    <s:fill>
      <s:SolidColor color="0x444444"/>
    </s:fill>
  </s:Rect>
  <s:Group width="100%" height="100%">
    <s:layout>
      <s:HorizontalLayout verticalAlign="middle" paddingLeft="5" paddingRight="5" paddingBottom="5" paddingTop="5"/>
    </s:layout>
    <!--- prev month button -->
    <s:Button id="prevMonthButton" label="&lt;"/>
    <s:Spacer width="100%"/>
    <!--- month label -->
    <s:Label id="monthLabel"/>
    <!--- year label -->
    <s:Label id="yearLabel"/>
    <s:Spacer width="100%"/>
    <!--- next month button -->
    <s:Button id="nextMonthButton" label="&gt;"/>
  </s:Group>
</s:Skin>
