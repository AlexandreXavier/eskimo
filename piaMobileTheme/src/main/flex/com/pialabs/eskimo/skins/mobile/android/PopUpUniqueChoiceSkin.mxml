<?xml version="1.0" encoding="utf-8"?>
<!--- The android skin class for the popup of Eskimo UniqueChoiceList component.
@see com.pialabs.eskimo.components.UniqueChoiceList 
-->
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark"
        xmlns:mx="library://ns.adobe.com/flex/mx">
  <!-- host component -->
  <fx:Metadata>
    [HostComponent("com.pialabs.eskimo.components.UniqueChoiceList")]
  </fx:Metadata>

  <s:Rect top="0" left="0" bottom="0" right="0" radiusX="10">
    <s:stroke>
      <s:SolidColorStroke color="#444444" weight="2"/>
    </s:stroke>
    <s:fill>
      <s:SolidColor color="#FFFFFF"/>
    </s:fill>
  </s:Rect>
  <s:List id="listDisplay" width="100%" height="100%"
          itemRenderer="com.pialabs.eskimo.components.RightRadioButtonRenderer"
          contentBackgroundAlpha="0" horizontalScrollPolicy="off"
          verticalScrollPolicy="auto">
    <s:layout>
      <s:VerticalLayout horizontalAlign="justify" gap="0" paddingBottom="10"
                        paddingTop="10"/>
    </s:layout>
  </s:List>

</s:Skin>
