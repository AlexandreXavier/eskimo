<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
        xmlns:s="library://ns.adobe.com/flex/spark" 
        xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:components="com.piaction.components.*" xmlns:components1="com.pialabs.eskimo.components.*">
    <!-- host component -->
    <fx:Metadata>
        [HostComponent("com.pialabs.eskimo.components.DateChooser")]
    </fx:Metadata>

    <!-- timeInput -->
    <s:Group id="dateInput" clipAndEnableScrolling="true" width="100%" height="175">
        <s:layout>
          <s:HorizontalLayout verticalAlign="bottom" gap="0"/>
        </s:layout>
        <s:VGroup width="100%" height="100%" id="dayGroup">
          <s:Label text="day"/>
          <components1:ListWheel id="dayList" width="100%" height="100%" minHeight="10" />
        </s:VGroup>
        <s:VGroup width="100%" height="100%" id="monthGroup">
          <s:Label text="month" />
          <components1:ListWheel id="monthList" width="100%" height="100%" minHeight="10" />
        </s:VGroup>
      <s:VGroup width="100%" height="100%" id="yearGroup">
        <s:Label text="year" />
        <components1:ListWheel id="yearList" width="100%" height="100%" minHeight="10" />
      </s:VGroup>      
    </s:Group>
</s:Skin>
