<!--- The android skin class for the Eskimo ComboBox component.

@see com.pialabs.eskimo.components.ComboBox
-->
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark"
        xmlns:mx="library://ns.adobe.com/flex/mx" width="100%">

  <fx:Metadata>
        /** 
        * A strongly typed property that references the component to which this skin is applied.
        */
        [HostComponent("com.pialabs.eskimo.components.ComboBox")]
    </fx:Metadata>

  <s:Group left="0" right="0" top="0" bottom="0">
    <s:Rect width="100%" height="100%">
      <s:stroke>
        <s:SolidColorStroke color="black"/>
      </s:stroke>
      <s:fill>
        <s:LinearGradient rotation="270">
          <s:GradientEntry color="#AAAAAA" alpha="1"/>
          <s:GradientEntry color="#FFFFFF" alpha="1"/>
        </s:LinearGradient>
      </s:fill>
    </s:Rect>

    <s:HGroup paddingLeft="8" width="100%" verticalAlign="middle" paddingTop="2"
              paddingBottom="2" paddingRight="2">
      <s:Label id="selectedLabelDisplay" width="100%"/>
      <s:BitmapImage 
                     source="@Embed(source='/com/pialabs/eskimo/skins/mobile/android/assets/combo-icon.png')"/>
    </s:HGroup>
  </s:Group>
</s:Skin>
