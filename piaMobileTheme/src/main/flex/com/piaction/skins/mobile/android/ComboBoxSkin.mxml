<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark"
        xmlns:mx="library://ns.adobe.com/flex/mx" width="100%">
    <!-- host component -->
    <fx:Metadata>
        [HostComponent("com.piaction.components.ComboBox")]
    </fx:Metadata>

    <s:Group left="0" right="0" top="0" bottom="0">
        <s:Rect width="100%" height="100%">
            <s:stroke>
                <s:SolidColorStroke color="black"/>
            </s:stroke>
            <s:fill>
                <s:LinearGradient rotation="270">
                    <s:GradientEntry color="#000000" alpha="0.5"/>
                    <s:GradientEntry color="#f0f0f0" alpha="0.5"/>
                </s:LinearGradient>
            </s:fill>
        </s:Rect>

        <s:HGroup paddingLeft="8" width="100%" verticalAlign="middle">
            <s:Label id="selectedLabel" text="Select" width="100%"/>
            <s:Image 
                     source="@Embed(source='/com/piaction/skins/mobile/android/assets/combo-icon.png')"/>
        </s:HGroup>
    </s:Group>
</s:Skin>
