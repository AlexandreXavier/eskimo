<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark"
        xmlns:mx="library://ns.adobe.com/flex/mx">
    <!-- host component -->
    <fx:Metadata>
    [HostComponent("com.piaction.components.UniqueChoiceList")]
  </fx:Metadata>

    <s:Rect top="0" left="0" bottom="0" right="0" radiusX="10">
        <s:stroke>
            <s:SolidColorStroke color="#000000" weight="2"/>
        </s:stroke>
        <s:fill>
            <s:SolidColor color="#FFFFFF"/>
        </s:fill>
    </s:Rect>
    <s:List id="listDisplay" width="100%" height="100%"
            itemRenderer="com.piaction.components.RightRadioButtonRenderer" 
            contentBackgroundAlpha="0" horizontalScrollPolicy="off">
        <s:layout>
            <s:VerticalLayout horizontalAlign="justify" gap="0"
                              paddingBottom="10" paddingTop="10"/>
        </s:layout>
    </s:List>

</s:Skin>
