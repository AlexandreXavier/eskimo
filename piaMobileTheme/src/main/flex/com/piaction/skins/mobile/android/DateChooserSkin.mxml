<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
        xmlns:s="library://ns.adobe.com/flex/spark" 
        xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:components="com.piaction.components.*">
  <!-- host component -->
  <fx:Metadata>
    [HostComponent("com.piaction.components.DateChooser")]
  </fx:Metadata>

  <!-- dateInput -->
  <s:Group id="dateInput" clipAndEnableScrolling="true" width="100%" height="175">
    <s:layout>
      <s:HorizontalLayout verticalAlign="bottom" gap="0"/>
    </s:layout>
    <s:VGroup height="100%" id="dayGroup" horizontalAlign="center">
      <s:Label id="dayLabel"/>
      <components:ListStepper allowValueWrap="true" id="dayList" height="100%" minHeight="10" width="90"/>
    </s:VGroup>
    <s:VGroup height="100%" id="monthGroup" horizontalAlign="center">
      <s:Label id="monthLabel"/>
      <components:ListStepper allowValueWrap="true" id="monthList" height="100%" minHeight="10" width="90"/>
    </s:VGroup>
    <s:VGroup height="100%" id="yearGroup" horizontalAlign="center">
      <s:Label id="yearLabel"/>
      <components:ListStepper allowValueWrap="true" id="yearList" height="100%" minHeight="10"  width="90"/>
    </s:VGroup>      
  </s:Group>
</s:Skin>

