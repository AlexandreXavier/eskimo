<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
        xmlns:s="library://ns.adobe.com/flex/spark" title="ButtonBarView">
    <fx:Declarations>
        <!-- Placer ici les éléments non visuels (services et objets de valeur, par exemple). -->
    </fx:Declarations>
    
    <s:layout>
        <s:VerticalLayout paddingTop="10" paddingRight="10" paddingBottom="10"
                          paddingLeft="10"/>
    </s:layout>
    
    <s:navigationContent>
        <s:Button label="Retour" click="navigator.popView()"/>
    </s:navigationContent>
    
    <s:ButtonBar width="100%">
        <s:dataProvider>
            <s:ArrayCollection>
                <fx:Object label="button 1"/>
                <fx:Object label="button 2"/>
                <fx:Object label="button 3"/>
                <fx:Object label="button 4"/>
            </s:ArrayCollection>
        </s:dataProvider>
    </s:ButtonBar>

</s:View>
