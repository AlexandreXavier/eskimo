<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
        xmlns:s="library://ns.adobe.com/flex/spark" title="FormView">
    <fx:Declarations>
        <!-- Placer ici les éléments non visuels (services et objets de valeur, par exemple). -->
    </fx:Declarations>
    
    <s:Form>
        <s:FormItem label="name" width="100">
            <s:TextInput id="fName" maxChars="64" width="150" height="100%"/>
        </s:FormItem>
        <s:FormItem label="password">
            <s:TextInput id="fPass" maxChars="64" displayAsPassword="true"
                         width="150" height="100%"/>
        </s:FormItem>
    </s:Form>
</s:View>
