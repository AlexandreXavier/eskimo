<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark" title="UniqueChoiceListView"
        xmlns:components="com.pialabs.eskimo.components.*">
    <fx:Declarations>
        <!-- Placer ici les éléments non visuels (services et objets de valeur, par exemple). -->
    </fx:Declarations>

    <s:navigationContent>
        <s:Button label="Retour" click="navigator.popView()"/>
    </s:navigationContent>

    <s:layout>
        <s:VerticalLayout paddingLeft="20" paddingTop="20" paddingRight="20"
                          paddingBottom="20"/>
    </s:layout>

    <components:UniqueChoiceList id="list" width="100%" height="100%"
                                 click="trace(event.target)">
        <components:dataProvider>
            <s:ArrayCollection>
                <fx:Object label="Item 1"/>
                <fx:Object label="Item 2"/>
                <fx:Object label="Item 3"/>
                <fx:Object label="Item 4"/>
                <fx:Object label="Item 5"/>
                <fx:Object label="Item 6"/>
            </s:ArrayCollection>
        </components:dataProvider>
    </components:UniqueChoiceList>

</s:View>
